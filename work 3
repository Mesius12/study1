#include<iostream>
#include<cmath>
using namespace std;

int main() {
	setlocale(LC_ALL, "rus");
	float S=0, n, m, p=0, r;
	bool f1 = 0;
	cout << "Вводите числа для S, n, p" << endl;
	while (f1 != 1) {
		if (!(cin >> S >> n >> p)) {
			if (S < 0 or n < 0 or p < 0 or n >= 15 or p >= 100 or S >= 1000) {
				cout << "Условия нереалистичны!" << endl;
				cin.clear();
				cin.ignore();
			}
			cout << "Вводите только целые числа!" << endl;
			cin.clear();
			cin.ignore();
		}
		else {
			f1 = 1;
		}
	}
	r = p / 100;
	m = ((S * r * pow(1 + r, n)) / (12 * (pow(1 + r, n) - 1)));
	cout << m << endl;
	return 0;
}
--WORK 3 #2 --
#include<iostream>
#include<cmath>
using namespace std;

int main() {
	setlocale(LC_ALL, "rus");
	float S, m, n, p, r;
	bool f1 = 0;
	cout << "Вводите числа для S, m, n" << endl;
	while (f1 != 1) {
		if (!(cin >> S >> m >> n)) {
			if (S < 0 or m < 0 or n < 0 or n >= 15 or p >= 100 or S >= 1000) {
				cout << "Вводите только числа!" << endl;
				cin.clear();
				cin.ignore();
			}
			cout << "Вводите только числа!" << endl;
			cin.clear();
			cin.ignore();
		}
		else {
			f1 = 1;
		}
	}
	for (float r = 0; r <= 100; r = r + 0.01) {
		p = r * 100;
		if (m == ((S * r * pow(1 + r, n)) / (12 * (pow(1 + r, n) - 1)))) {
			cout << p << endl;
		 }
	}
	return 0;
}
