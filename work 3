#include<iostream>
#include<fstream>
#include<string>
using namespace std;

int main() {


	ofstream a("filename.txt");
	a << "123213adasd132123fafAAAFFFDDD21312";
	a.close();

	string b;

	ifstream bc("filename.txt");
	while (getline(bc, b)) {
		cout << b;
	}
	bc.close();
	return 0;
}
