#include<iostream>
#include<fstream>
#include<string>
using namespace std;

int main() {
	setlocale(LC_ALL, "rus");
	int i;
	string alpha, beta;
	ofstream V("vvod.txt");
	V << "авыаывады123456789"; // создаем текст
	V.close();
	ifstream C("vvod.txt"); // выводим
	getline(C, alpha);
	C.close();
	for (i = 0; i < alpha.size(); i++) { // считаем 
		if (alpha[i] >= '0' and alpha[i] <= '10') {
			cout << alpha[i];
		}
	}
	return 0;
}
---WORK 3 #5----
#include <iostream>
#include <string>
#include<algorithm>
using namespace std;

int main() {
    setlocale(LC_ALL, "rus");
    string str;
    char temp;
    cout << "Введите строку: ";
    getline(cin, str);
    int len = str.length();
    for (int i = 0; i < len; i++) {

        for (int j = 0; j < len - 1; j++) {
            if (tolower(str[j]) > tolower(str[j + 1])) {

                temp = str[j];
                str[j] = str[j + 1];
                str[j + 1] = temp;
            }
        }
    }

    cout << "Строка после сортировки: " << str << endl;
    return 0;
}
